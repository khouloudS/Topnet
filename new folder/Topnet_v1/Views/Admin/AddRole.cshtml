@model Topnet_v1.Models.RoleDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Menu {
    @Scripts.Render("~/Scripts/Forms/General/menu")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Horizontal Form</h3>
        </div>
        <form class="form-horizontal">
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.RoleName,
                                       htmlAttributes: new { @class = "control-label col-ms-2" })
                    <div class="col-ms-10">
                        @Html.EditorFor(model => model.RoleName,
                                           new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RoleName,
                                           "",
                                           new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-ms-offset-2 col-ms-10">
                        <input type="submit" value="Save" class="btn btn-info pull-right" />
                        @Html.ActionLink("Back to List",
                            "ViewAllRoles",
                            null,
                            new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>


        </form>
    </div>


}
