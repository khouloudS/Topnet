@model IEnumerable<Topnet_v1.KPI>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    /**/

    /**/



    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu {
    @Scripts.Render("~/Scripts/Tables/Data/menu")
    @Scripts.Render("~/Scripts/Elements/Icons/menu")
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")

@Styles.Render("~/Styles/Elements/Icons")

<br />
<p>
    @Html.ActionLink("Create New KPI", "Create", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Back to Home", "../", "Home", null, new { @class = "btn btn-default" })
</p>


<div class="box">
    <div>
        <h3 class="box-title">La liste des indicateurs de performance</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nomKPI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.formuleKPI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.resultatKPI)
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nomKPI)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.formuleKPI)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.resultatKPI)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.idKPI }) |
                            @Html.ActionLink("Details", "Details", new { id = item.idKPI }) |

                            @if ((item.nomKPI.ToLower() != this.User.Identity.Name.ToLower()))
    {
                        @Html.ActionLink("  ", "DeleteUser", new { UserName = item.nomKPI },
                                                 new { onclick = "return confirm('Are you sure you wish to delete this user?');", @class = "fa fa-fw fa-trash-o" })

}
                        </td>

                    </tr>
                }


        </table>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
}

