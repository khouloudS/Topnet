
@model Topnet_v1.ticket


<script type="text/javascript">
	function create() {
		var numseq = $('#nums').val();
		var description = $('#descrip').val();
		var statut = $('#stat').val();


		$.ajax({
			url: "/GenererTicket/Cloturer",
			data: {
				numseq: numseq,
				description: description,
				statut: statut

			},
			success: function (data) {

				$('#myModal').modal('hide');
				//window.location.href = '/GenererTicket/Index'
			}


		});
	}


</script>


